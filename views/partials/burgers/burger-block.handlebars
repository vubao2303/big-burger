
<li class="d-flex align-items-center justify-content-between py-1 menus">
    {{burger_name}}

    <div>
        {{#if devoured}}
        <button type="button" title="Remake" class="btn btn-primary remake-burger" data-id="{{id}}"
            data-devoured="{{devoured}}">Kiss Again <i class="fas fa-heart"></i></button>
        {{/if}}

        <button type="button" title="{{#if devoured}}Trash {{else}}Eat{{/if}}" class="btn {{#if devoured}}btn-warning trash-burger {{else}}btn-primary
        change-devour{{/if}}" data-id="{{id}}" data-devoured="{{devoured}}">
            {{#if devoured}}<i class="fas fa-trash-alt"></i>{{else}}Kiss <i class='fas fa-heart' style='color:red'></i>{{/if}}
        </button>
    </div>
</li>

