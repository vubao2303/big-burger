{{!-- THIRD TIME IS A CHARM  --}}
<div class="container">

<div class="row d-flex flex-column align-items-center justify-content-center text-center">
  <h1 class= "center">WANT TO KISS ?</h1>
  <img class="lip-picture" style="width:20%;" src="/assets/img/lips.png" alt="lip-pic">
 </div>

<div id="content-wrapper" class="rounded py-3 mb-3">
  <div class="row justify-content-around">
    <div class="col-md-4 burger-list">
      <h2 class="text-center font-weight-bold py-3">LIST OF CUTIES' NAME</h2>
      <ul class="item-list pb-4">
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4 burger-list">
      <h2 class="text-center font-weight-bold py-3">ALREADY KISSED</h2>
      <ul class="item-list pb-4">
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row justify-content-center text-center pb-4">
    <div class="col-md-6">
      <h6> Name a babe you want to Kiss
      </h6>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form class="create-burger text-center px-2">
        <div class="form-group">
          <input type="text" class="form-control" id="burger" name="name">
        </div>
        <button class="btn btn-success" type="submit">Let's Kiss <i class="far fa-kiss-beam"></i></button>
      </form>
    </div>
  </div>
</div>
</div>
